<resources>
    <style name="Button.Blue" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_height">32dp</item>
        <item name="android:background">@drawable/btn_blue_rounded</item>
        <item name="android:elevation">0dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Button.Gray" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_height">32dp</item>
        <item name="android:background">?buttonBackground</item>
        <item name="android:elevation">0dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
