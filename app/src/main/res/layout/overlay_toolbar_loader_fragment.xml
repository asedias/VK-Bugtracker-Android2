<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:id="@+id/appkit_loader_root" android:layout_width="fill_parent" android:layout_height="fill_parent"
