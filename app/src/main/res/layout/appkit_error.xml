<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center" android:orientation="vertical" android:id="@+id/error_layout" android:padding="16.0dip" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/error_image"
        android:layout_width="84dp"
        android:layout_height="84dp"
        app:srcCompat="@drawable/ic_about" />

    <TextView
        android:id="@id/error_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center"
        android:text="@string/network_error_description"
        android:textColor="@android:color/black"
        android:textSize="16.0dip" />

    <Button
        android:id="@id/error_retry"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/try_again" />
</LinearLayout>