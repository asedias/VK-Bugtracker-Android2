<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorStatusBar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="primaryTextColor">@android:color/black</item>
        <item name="buttonBackground">@drawable/btn_blue_light_rounded</item>
        <item name="android:actionBarSize">56dp</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
        <item name="actionBarTheme">@style/AppTheme.PopupOverlay</item>
    </style>

    <style name="AppTheme.Tab" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/googlesans_medium</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorStatusBar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="primaryTextColor">@android:color/white</item>
        <item name="buttonBackground">@drawable/btn_blue_dark_rounded</item>
        <item name="android:actionBarSize">56dp</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
        <item name="navBackground">@drawable/bg_bottom_nav_dark</item>
        <item name="contentBackground">@color/colorDarkBackground</item>
    </style>

    <style name="MaterialListButtonBlue">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColor">#ff5183b7</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">56.0dip</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Splash" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/bg_dialog</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/bg_dialog</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/googlesans_medium</item>
    </style>

    <style name="Button.Blue" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/btn_blue_rounded</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/googlesans_medium</item>
    </style>

    <style name="Button.Gray" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_height">3dp</item>
        <item name="android:background">@drawable/btn_blue_light_rounded</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/googlesans_medium</item>
    </style>

    <style name="TranslucentSystemBarsTheme" parent="AppTheme.Dark">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>
